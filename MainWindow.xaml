<Window x:Class="ReportControlSystem.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Report Control System" Height="660"  Width="750"
        WindowStartupLocation="CenterScreen"  ResizeMode="NoResize" Closed="Window_Closed" Icon="Icons/heimao12.ico">

    <Window.Resources >
        <Storyboard x:Key="open_logon" SpeedRatio="3" Completed="Logon_StoryBoard_Completed">
            <DoubleAnimation 
                Storyboard.TargetName="LogonPanel"
                Storyboard.TargetProperty="(Image.Opacity)"
                From="0" To="1"
                RepeatBehavior="1x" AutoReverse="False" />
        </Storyboard>

        <Storyboard x:Key="close_logon" SpeedRatio="3">
            <DoubleAnimation 
                Storyboard.TargetName="LogonPanel"
                Storyboard.TargetProperty="(Image.Opacity)"
                From="1" To="0"
                RepeatBehavior="1x" AutoReverse="False" />
        </Storyboard>

    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="6*"/>
            <RowDefinition Height="1.5*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <GroupBox Name="MaintenanceGroup" Grid.Row="0" Grid.Column="0" Header ="Main Control" FontSize="18" Margin="18" 
                  BorderThickness="2" BorderBrush="Black" Opacity="1" >
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition />
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>

                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                </Grid.RowDefinitions>


                <Button Name="btnStaff"  Grid.Row="0" Grid.Column="0" Content="Staff Maintenance" FontSize="15"  Margin="24" Click="BTN_Staff_Clicked"  />
                <TextBlock Grid.Row="0" Grid.Column="1" Text="Click this to update/view Staff info" Margin="9" TextWrapping="Wrap"/>

                <Button Name="btnCategory" Grid.Row="1" Grid.Column="0" Content="Category Maintenance" FontSize="15"  Margin="24" Click="BTN_Category_Clicked" />
                <TextBlock Grid.Row="1" Grid.Column="2" Text="Click this to update/view Category info" Margin="9" TextWrapping="Wrap"/>

                <Button Name="btnPeriod"  Grid.Row="2" Grid.Column="0" Content="Period Maintenance" FontSize="15"  Margin="24" Click="BTN_Period_Clicked"  />
                <TextBlock Grid.Row="2" Grid.Column="2" Text="Click this to update/view Period info" Margin="9" TextWrapping="Wrap"/>

                <Button Name="btnAdmin"  Grid.Row="3" Grid.Column="0" Margin="24" Click="BTN_Administratorw_Clicked"  >
                    <TextBlock Text="Administrator Maintenance" FontSize="15"  TextWrapping="Wrap"/>
                </Button>
                <TextBlock Grid.Row="3" Grid.Column="2" Text="Click this to update/view Administrator info" Margin="9" TextWrapping="Wrap"/>

                <Border Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="3"  BorderBrush="Black" BorderThickness="0,0,0,2" />
                <Border Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="3"  BorderBrush="Black" BorderThickness="0,0,0,2" />
                <Border Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="3"  BorderBrush="Black" BorderThickness="0,0,0,2" />

            </Grid>
        </GroupBox>
    
        <GroupBox Name="ReportGroup" Grid.Row="0" Grid.RowSpan="2"  Grid.Column="1" Header="Reports" 
                  FontSize="18"    BorderThickness="2" BorderBrush="Black" Margin="18,18,18,3">
            <Grid Name="PeriodGrid">
                <!--<Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition/>
                </Grid.RowDefinitions>-->
            </Grid>
        </GroupBox>

        <GroupBox Name="PaymentGroup"  Grid.Row="1" Grid.Column="0" Header="Payment" FontSize="18"    BorderThickness="2" BorderBrush="Black" Margin="18,3,18,3">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                
                <Grid.ColumnDefinitions >
                    <ColumnDefinition />
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>
                
                <Button Grid.Row="0" Grid.Column="0" Content="Make a payment" Margin="24,9,24,9" Click="BTN_Payment_Clicked" />
                <TextBlock Grid.Row="0" Grid.Column="1" Margin="9,9,9,9" Text="Make a payment" />
            </Grid>
        </GroupBox>


        <!-- Logon Panel-->
        <Border Name="LogonPanel" Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2" BorderBrush="Black" BorderThickness="3" 
                CornerRadius="6,6,6,6" Height="250" Width="350" VerticalAlignment="Center" HorizontalAlignment="Center"
                Opacity="0" >
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="0.5*"/>
                </Grid.RowDefinitions>

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="1.5*"/>
                </Grid.ColumnDefinitions>

                <Label Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2" Content="Control System Logon Panel" FontSize="20" FontWeight="Bold"
                       HorizontalAlignment="Center"/>

                <Grid Grid.Row="1" Grid.Column="0" Grid.RowSpan="2" Grid.ColumnSpan="2">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="2*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="2*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>
                    
                    <Image Grid.Row="0" Grid.RowSpan="4" Grid.Column="0" Source="Icons/heimao.jpg" />

                    <Label Content="User Name:" Grid.Row="0" Grid.Column="1" Grid.ColumnSpan="2"  FontSize="15" 
                           VerticalAlignment="Center" HorizontalAlignment="Center"
                       Margin="0,0,0,0"/>
                    <TextBox Name="txt_username"  Grid.Row="1" Grid.Column="1" Grid.ColumnSpan="2" FontSize="15" 
                             VerticalAlignment="Center"  
                         IsHitTestVisible="True" Text="" Margin="10,0,10,0" Focusable="True"
                             ToolTip="Enter the name of the authorized user" TabIndex="0" />


                    <Label Content="Password:" Grid.Row="2" Grid.Column="1" Grid.ColumnSpan="2" FontSize="15" 
                           VerticalAlignment="Center" HorizontalAlignment="Center"
                       Margin="0,0,0,0"/>
                    <PasswordBox Name="txt_password" Password=""  Grid.Row="3" Grid.Column="1" Grid.ColumnSpan="2" FontSize="15"
                                 VerticalAlignment="Center" 
                         IsHitTestVisible="True" Margin="10,0,10,0" ToolTip="Enter the password of the authorized user" TabIndex="1"/>

                </Grid>
                
                <Button Grid.Row="3" Grid.Column="0" Margin="12,12,0,6" Content="Clear" FontSize="18" Click="BTN_Clear_Clicked" TabIndex="2"/>
                <Button Grid.Row="3" Grid.Column="1" Margin="60,12,12,6"  Content="Logon" FontSize="18" Click="BTN_Logon_Clicked" IsDefault="True" TabIndex="3"/>
                

                <Label Name="lbl_logon_status" Grid.Row="4" Grid.Column="0" Grid.ColumnSpan="2" Foreground="Red"  
                       FontSize="15" Content="Status:"                       Margin="10,-3,0,0"/>

                <Border Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2" BorderThickness="0,0,0,2" BorderBrush="Black" Margin="3"/>


            </Grid>
        </Border>



    </Grid>
</Window>
