<Window x:Class="ReportControlSystem.CustomMessageBox"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="CustomMessageBox" Height="100" Width="300" 
        ResizeMode="NoResize" WindowStartupLocation="CenterOwner" 
        BorderBrush="Black"  BorderThickness="1"  WindowStyle="None">
    <Grid Name="GridLayout" Margin="1">
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <TextBlock Name="txtMsg"  Grid.Row="0" Grid.RowSpan="2" Margin="12" VerticalAlignment="Center" 
                   HorizontalAlignment="Center"  FontSize="15"/>
    </Grid>
</Window>
